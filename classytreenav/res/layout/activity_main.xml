<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        tools:context="au.com.cybersearch2.classyfy.MainActivity" >
        
        <fragment android:name="au.com.cybersearch2.classyfy.NodeDetailsFragment"
            android:id="@+id/node_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@android:layout/list_content" >
        </fragment>
        <fragment android:name="au.com.cybersearch2.classyfy.ProgressFragment"
            android:id="@+id/main_activity_progress_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </fragment>
</LinearLayout>


